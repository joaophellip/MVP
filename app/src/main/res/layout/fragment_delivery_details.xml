<?xml version="1.0" encoding="utf-8"?>
<com.cozo.cozomvp.mainactivity.deliverydetailsfragment.DeliveryDetailsFragment
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/deliveryDetailsContainer"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom">

    <android.support.v7.widget.CardView
        android:id="@+id/deliveryCardView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:cardCornerRadius="8dp"
        android:background="@color/white"
        android:layout_gravity="bottom">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/deliveryImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="14dp"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    />

                <TextView
                    android:id="@+id/deliveryName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="14dp"
                    android:gravity="center"
                    tools:text="João"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:transitionName="titleTransition" />

                <EditText
                    android:id="@+id/deliveryNotesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Adicione um comentário ao entregador..."
                    android:layout_margin="14dp"
                    android:inputType="text" />

                <Button
                    android:id="@+id/deliveryCheckoutButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/ripple_effect"
                    android:elevation="18dp"
                    android:pointerIcon="arrow"
                    android:text="Checkout"
                    android:textColor="@color/white100"
                    />

            </LinearLayout>

        </ScrollView>

    </android.support.v7.widget.CardView>

</com.cozo.cozomvp.mainactivity.deliverydetailsfragment.DeliveryDetailsFragment>