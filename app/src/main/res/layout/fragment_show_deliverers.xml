<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/showDeliverersFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:background="@drawable/ripple_effect"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/showButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:elevation="12dp"
        android:text="@string/show_deliv_message"
        android:fontFamily="sans-serif-medium"
        android:textAllCaps="true"
        android:textColor="@color/white100"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.CardView
        android:id="@+id/cartCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:layout_marginEnd="10dp"
        app:cardBackgroundColor="@color/dark_bg_light_disabled_text"
        app:cardCornerRadius="4dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:id="@+id/showQuantityText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_deliv_quantity"
            android:textColor="@color/white100"
            android:fontFamily="sans-serif-medium"
            android:layout_margin="4dp"
            android:textSize="18sp"
            />

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>