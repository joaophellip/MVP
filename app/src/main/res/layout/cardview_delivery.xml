<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewDelivery"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginTop="6dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginBottom="12dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_anchorGravity="top">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/deliveryContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="parent">

        <View
            android:id="@+id/deliveryDivider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="0dp"
            android:background="#ababab"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/deliveryLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:text="Detalhes da entrega"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/deliveryDivider" />

        <ImageView
            android:id="@+id/partnerDeliveryImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="TODO"
            android:src="@drawable/baseline_person_black_48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/deliveryLabel" />

        <TextView
            android:id="@+id/partnerDeliveryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="-16dp"
            android:text="JosÃ© da Silva"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/partnerDeliveryImage"
            app:layout_constraintTop_toTopOf="@+id/partnerDeliveryImage" />

        <ImageView
            android:id="@+id/timeDeliveryImage"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="-16dp"
            android:contentDescription="TODO"
            android:src="@drawable/baseline_schedule_black_24dp"
            app:layout_constraintBottom_toBottomOf="@+id/partnerDeliveryImage"
            app:layout_constraintStart_toEndOf="@+id/partnerDeliveryImage"
            app:layout_constraintTop_toBottomOf="@+id/partnerDeliveryName" />

        <TextView
            android:id="@+id/timeDeliveryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="13min - 31min"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/timeDeliveryImage"
            app:layout_constraintStart_toEndOf="@+id/timeDeliveryImage"
            app:layout_constraintTop_toTopOf="@+id/timeDeliveryImage" />


        <TextView
            android:id="@+id/priceDeliveryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:text="R$ 7,50"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/timeDeliveryText"
            app:layout_constraintEnd_toStartOf="@+id/moreDeliveryImage"
            app:layout_constraintTop_toTopOf="@+id/partnerDeliveryName" />

        <ImageView
            android:id="@+id/moreDeliveryImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:contentDescription="TODO"
            android:src="@drawable/baseline_more_vert_black_24dp"
            app:layout_constraintBottom_toBottomOf="@+id/partnerDeliveryImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/partnerDeliveryImage" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>